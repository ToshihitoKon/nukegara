conky.config = {
    use_xft= true,
    xftalpha= .1,
    update_interval= 1,
    total_run_times= 0,

    background= true,

    own_window= true,
    own_window_type= 'override',
    own_window_transparent= false,
    own_window_hints= 'undecorated,below,sticky,skip_taskbar,skip_pager',
    own_window_colour= '000',
    own_window_argb_visual= true,
    own_window_argb_value= 96,

    double_buffer= true,

    minimum_width= 270,
    maximum_width= 270,

    minimum_height= 10,

    draw_shades= false,
    draw_outline= false,
    draw_borders= false,
    draw_graph_borders= false,

    alignment= 'top_right',
    gap_x= 0,
    gap_y= 0,
    no_buffers= true,
